<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollview_absences"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_absences_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="2dp"
                style="@style/primaryBodyText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_absent_header"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                style="@style/primaryBodyText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.slensky.focussis.ui.absences.AbsenceLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:status="absent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:id="@+id/text_absent"
                    style="@style/primaryBodyText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <com.slensky.focussis.ui.absences.AbsenceLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:status="excused"/>

                <TextView
                    android:id="@+id/text_excused_absences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/primaryBodyText"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_other_marks_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                style="@style/primaryBodyText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.slensky.focussis.ui.absences.AbsenceLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:status="late"/>

                <TextView
                    android:id="@+id/text_late"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/primaryBodyText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.slensky.focussis.ui.absences.AbsenceLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:status="tardy"/>

                <TextView
                    android:id="@+id/text_tardy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/primaryBodyText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <com.slensky.focussis.ui.absences.AbsenceLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:status="misc"/>

                <TextView
                    android:id="@+id/text_misc_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/primaryBodyText"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="horizontal">

                <com.slensky.focussis.ui.absences.AbsenceLabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:status="offsite"/>

                <TextView
                    android:id="@+id/text_offsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/primaryBodyText"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:text="@string/absences_table_header"
                style="@style/primaryHeadingText"/>

            <TableLayout
                android:id="@+id/table_absences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>