<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assignment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        >

        <ImageView
            android:id="@+id/image_edited"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:visibility="gone"
            android:layout_marginRight="4dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_mode_edit_grey_24px" />

        <TextView
            android:id="@+id/text_assignment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_edited"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            style="@style/primaryBodyText" />

    </RelativeLayout>


    <TextView
        android:id="@+id/text_assignment_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        style="@style/primaryBodyText" />

    <TextView
        android:id="@+id/text_assignment_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        style="@style/primaryBodyText" />

    <TextView
        android:id="@+id/text_assignment_assigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        style="@style/primaryBodyText" />

    <TextView
        android:id="@+id/text_assignment_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        style="@style/primaryBodyText" />

    <TextView
        android:id="@+id/text_assignment_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        style="@style/primaryBodyText" />
</TableRow>