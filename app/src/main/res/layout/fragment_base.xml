<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout_base_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_base_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_base_network_failure"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/network_failure_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_failure_message"
            android:textAlignment="center"
            style="@style/secondaryBodyText"
            android:drawableStart="@drawable/ic_error_outline_black_24px"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/network_failure_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickRetry"
            android:text="@string/network_failure_button" />

    </LinearLayout>

</RelativeLayout>